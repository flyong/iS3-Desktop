<UserControl x:Class="IS3.UIDesign.UserControls.RaisedText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IS3.UIDesign.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <BlurEffect x:Key="Blur" />
        <DropShadowEffect x:Key="Shadow" BlurRadius="5" ShadowDepth="5" Color="Black" Direction="-45" Opacity="1" />
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" >

        <TextBlock x:Name="DisplayTextBlur" Text="" Foreground="Black" Effect="{StaticResource Blur}"   />
        <TextBlock x:Name="DisplayText" Foreground="White" Effect="{StaticResource Shadow}" />
    </Grid>
</UserControl>

